<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:orientation="vertical"
    app:cardCornerRadius="30dp"
    android:layout_margin="20dp"
    android:layout_marginBottom="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/purple_button"
        android:layout_gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="100dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/face"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/desingerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="ANA"
            android:inputType="textCapCharacters"
            android:layout_toRightOf="@id/cardPic"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location"
            android:text="alamat_designer\n Kota, Provinsi"
            android:textSize="20sp"
            android:layout_below="@id/desingerName"
            android:layout_toRightOf="@id/cardPic"
            android:drawablePadding="5dp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>